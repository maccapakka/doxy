{
  "name": "@doxy/design-system",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./icon": "./src/components/Icon/Icon.tsx",
    "./text": "./src/components/Text/Text.tsx",
    "./components": "./src/components/index.ts",
    "./group": "./src/components/Group/Group.tsx",
    "./button": "./src/components/Button/Button.tsx",
    "./tokens/*": "./src/tokens/*",
    "./icons": "./src/icons/index.ts",
    "./icons/*.tsx": "./src/icons/*.tsx",
    "./icons/*": "./src/icons/*.tsx",
    "./*": "./src/*.tsx"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:icon": "vitest run src/components/Icon/Icon.unit.tsx --coverage.include=src/components/Icon/Icon.tsx",
    "test:text": "vitest run src/components/Text/Text.unit.tsx --coverage.include=src/components/Text/Text.tsx",
    "test:group": "vitest run src/components/Group/Group.unit.tsx --coverage.include=src/components/Group/Group.tsx",
    "test:button": "vitest run src/components/Button/Button.unit.tsx --coverage.include=src/components/Button/Button.tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "storybook:test": "test-storybook"
  },
  "devDependencies": {
    "@doxy/eslint-config": "workspace:*",
    "@doxy/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^8",
    "@storybook/addon-essentials": "^8",
    "@storybook/addon-interactions": "^8",
    "@storybook/addon-links": "^8",
    "@storybook/react": "^8",
    "@storybook/react-vite": "^8",
    "@storybook/test": "^8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/classnames": "^2.3.4",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "axe-core": "^4.11.0",
    "eslint": "^9.39.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.2.0",
    "storybook": "^8",
    "typescript": "5.9.2",
    "vite": "^6",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "framer-motion": "^12.23.25",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
